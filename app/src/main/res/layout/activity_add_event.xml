<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexsteen.nrscapp.AddEvent">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/headBlue"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/headBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Add Event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_pageName"
        android:textSize="27sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dip"
        android:layout_height="45dip"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:layout_marginEnd="38dp"
        android:id="@+id/btn_email"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dip"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_previous"
        android:id="@+id/btn_back"
        android:background="#00000000"
        android:layout_alignBottom="@+id/txt_pageName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />


    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="?android:attr/floatingToolbarOpenDrawable"
        android:id="@+id/imageButton"
        android:background="#00000000"
        android:tint="@color/white"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/btn_email"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tb_startDate"
        android:layout_alignBottom="@+id/tb_startDate"
        android:layout_toStartOf="@+id/tb_eventName"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"
        android:id="@+id/txt_start" />

    <TextView
        android:text="End"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/txt_end"
        android:layout_alignBaseline="@+id/tb_endDate"
        android:layout_alignBottom="@+id/tb_endDate"
        android:layout_alignEnd="@+id/txt_start" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Event Name"
        android:textAlignment="center"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/tb_eventName"
        android:textSize="20sp"
        android:layout_below="@+id/headBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:layout_below="@+id/tb_endDate"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/tb_endDate"
        android:hint="mm/dd/yyyy"
        android:singleLine="true"
        android:layout_below="@+id/tb_startDate"
        android:layout_toStartOf="@+id/btn_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/tb_startDate"
        android:hint="mm/dd/yyyy"
        android:layout_below="@+id/tb_eventName"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="40dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_budgetBar"
            android:layout_marginBottom="16dp"
            android:buttonTint="@color/gray"
            android:layout_above="@+id/editText"
            android:layout_alignStart="@+id/radio_budgetCustom"
            android:checked="true"/>

        <RadioButton
            android:text="Custom Amount:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_budgetCustom"
            android:layout_below="@+id/textView2"
            android:buttonTint="@color/gray"
            android:textColor="@color/gray"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"/>

    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/editText"
        android:hint="$12345"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="343dp"/>

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:textAllCaps="false"
        android:id="@+id/btn_done"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:background="@color/green"
        android:textColor="@color/white"
        android:layout_marginTop="50dp" />

</RelativeLayout>
