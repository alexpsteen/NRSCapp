<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexsteen.nrscapp.AddEvent">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/headBlue"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/headBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Add Event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_pageName"
        android:textSize="27sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dip"
        android:layout_height="45dip"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:layout_marginEnd="38dp"
        android:id="@+id/btn_email"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dip"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/arrow_left"
        android:id="@+id/btn_back"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/txt_pageName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp" />


    <!--<ImageButton-->
        <!--android:layout_width="45dp"-->
        <!--android:layout_height="45dp"-->
        <!--app:srcCompat="?android:attr/floatingToolbarOpenDrawable"-->
        <!--android:id="@+id/imageButton"-->
        <!--android:background="#00000000"-->
        <!--android:tint="@color/white"-->
        <!--android:scaleType="fitCenter"-->
        <!--android:layout_alignTop="@+id/btn_email"-->
        <!--android:layout_alignParentEnd="true" />-->

    <TextView
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tb_startDate"
        android:layout_alignBottom="@+id/tb_startDate"
        android:layout_toStartOf="@+id/tb_eventName"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"
        android:id="@+id/txt_start" />

    <TextView
        android:text="End"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/txt_end"
        android:layout_alignBaseline="@+id/tb_endDate"
        android:layout_alignBottom="@+id/tb_endDate"
        android:layout_alignEnd="@+id/txt_start" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Event Name"
        android:textAlignment="center"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/tb_eventName"
        android:textSize="20sp"
        android:layout_below="@+id/headBar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/tb_endDate"
        android:hint="mm/dd/yyyy"
        android:layout_marginLeft="85dp"
        android:layout_below="@+id/tb_startDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/tb_startDate"
        android:hint="mm/dd/yyyy"
        android:layout_below="@+id/tb_eventName"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/budgetGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_budgetBar"
            android:layout_marginBottom="16dp"
            android:buttonTint="@color/gray"
            android:layout_above="@+id/editText"
            android:layout_alignStart="@+id/radio_budgetCustom"
            android:checked="true"/>

        <RadioButton
            android:text="Custom Amount:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_budgetCustom"
            android:layout_below="@+id/textView2"
            android:buttonTint="@color/gray"
            android:textColor="@color/gray"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>

    </RadioGroup>



    <!--TICKS HERE-->

    <ImageView
        android:layout_width="2dp"
        android:layout_height="25dp"
        android:id="@+id/tick0"
        android:layout_below="@id/budgetGroup"
        android:layout_alignLeft="@id/txt_end"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="67dp"
        android:src="@drawable/border"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="25dp"
        android:src="@drawable/border"
        android:layout_alignLeft="@id/tick0"
        android:layout_alignTop="@id/tick0"
        android:layout_marginLeft="240dp"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="25dp"
        android:src="@drawable/border"
        android:layout_alignLeft="@id/tick0"
        android:layout_alignTop="@id/tick0"
        android:layout_marginLeft="120dp"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="18dp"
        android:src="@drawable/border"
        android:layout_alignLeft="@id/tick0"
        android:layout_alignTop="@id/tick0"
        android:layout_marginTop="3.5dp"
        android:layout_marginLeft="60dp"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="18dp"
        android:src="@drawable/border"
        android:layout_alignLeft="@id/tick0"
        android:layout_alignTop="@id/tick0"
        android:layout_marginTop="3.5dp"
        android:layout_marginLeft="180dp"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="14dp"
        android:src="@drawable/border"
        android:layout_alignLeft="@id/tick0"
        android:layout_alignTop="@id/tick0"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="14dp"
        android:src="@drawable/border"
        android:layout_alignLeft="@id/tick0"
        android:layout_alignTop="@id/tick0"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="90dp"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="14dp"
        android:src="@drawable/border"
        android:layout_alignLeft="@id/tick0"
        android:layout_alignTop="@id/tick0"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="150dp"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="14dp"
        android:src="@drawable/border"
        android:layout_alignLeft="@id/tick0"
        android:layout_alignTop="@id/tick0"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="210dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tick0"
        android:text="0             10             20             30            40"
        android:layout_alignLeft="@id/tick0"
        android:layout_marginLeft="-2dp"
        />





    <SeekBar
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/budgetGroup"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/budgetBar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/budgetCustom"
        android:hint="12345"
        android:layout_alignLeft="@id/budgetGroup"
        android:layout_below="@id/budgetGroup"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-40dp"/>

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:textAllCaps="false"
        android:id="@+id/btn_done"
        android:layout_below="@+id/budgetCustom"
        android:layout_centerHorizontal="true"
        android:background="@color/green"
        android:textColor="@color/white"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="Budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/txtBudget"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-10dp"
        android:layout_toEndOf="@+id/tick0" />

    <TextView
        android:text="(in $1,000 increments)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtBudget"
        android:layout_below="@id/txtBudget"
        android:layout_marginTop="-18dp"
        android:layout_marginLeft="60dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/budgetCustom"
        android:layout_alignLeft="@id/budgetCustom"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="-10dp"
        />

</RelativeLayout>
