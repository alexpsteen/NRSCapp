<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_feature"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexsteen.nrscapp.AddFeature">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/headBlue"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/headBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Add Feature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_pageName"
        android:textSize="27sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dip"
        android:layout_height="45dip"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:layout_marginEnd="38dp"
        android:id="@+id/btn_email"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dip"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/arrow_left"
        android:id="@+id/btn_back"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/txt_pageName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp" />

    <TextView
        android:text="Select a Feature Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:textSize="22dp"
        android:layout_below="@+id/headBar"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Venue"
        android:paddingLeft="20dp"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textAlignment="viewStart"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/headBar"
        android:layout_marginTop="140dp"
        android:id="@+id/btn_venue"
        android:background="@drawable/border"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/arrow_right"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/btn_venue"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="20dp" />


    <Button
        android:text="Food"
        android:paddingLeft="20dp"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textAlignment="viewStart"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_venue"
        android:id="@+id/btn_food"
        android:background="@drawable/border"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/arrow_right"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/btn_food"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:text="Drinks"
        android:paddingLeft="20dp"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textAlignment="viewStart"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_food"
        android:id="@+id/btn_drinks"
        android:background="@drawable/border"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/arrow_right"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/btn_drinks"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="20dp" />


</RelativeLayout>
