<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexsteen.nrscapp.CreateAccount">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_cellphone"
        android:layout_alignBottom="@+id/user_cellphone"
        android:layout_centerHorizontal="true"
        android:layout_x="140dp"
        android:layout_y="38dp"
        android:text="Create Account" />

    <EditText
        android:id="@+id/user_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user_cellphone"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="19dp"
        android:layout_x="64dp"
        android:layout_y="98dp"
        android:hint="First Name" />

    <EditText
        android:id="@+id/user_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_first_name"
        android:layout_alignBottom="@+id/user_first_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        android:layout_x="220dp"
        android:layout_y="98dp"
        android:hint="Last Name" />

    <EditText
        android:id="@+id/user_username_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user_first_name"
        android:layout_alignTop="@+id/user_password_entry"
        android:layout_x="74dp"
        android:layout_y="188dp"
        android:hint="Username" />

    <EditText
        android:id="@+id/user_password_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/user_last_name"
        android:layout_below="@+id/user_last_name"
        android:layout_marginTop="156dp"
        android:layout_x="220dp"
        android:layout_y="186dp"
        android:hint="Password" />

    <EditText
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/user_last_name"
        android:layout_below="@+id/user_last_name"
        android:layout_marginTop="52dp"
        android:layout_x="220dp"
        android:layout_y="298dp"
        android:hint="Email Address" />

    <EditText
        android:id="@+id/user_cellphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="148dp"
        android:layout_toStartOf="@+id/user_last_name"
        android:layout_x="32dp"
        android:layout_y="296dp"
        android:hint="Cellphone Number" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="126dp"
        android:layout_y="438dp"
        android:onClick="createAccount"
        android:text="Create Account" />

    <EditText
        android:id="@+id/create_special_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="148dp"
        android:layout_toStartOf="@+id/user_last_name"
        android:layout_x="119dp"
        android:layout_y="362dp"
        android:hint="Special Password" />

</AbsoluteLayout>
