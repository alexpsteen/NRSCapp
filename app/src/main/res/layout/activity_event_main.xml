<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_event_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexsteen.nrscapp.EventMain">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/headBlue"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/headBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_pageName"
        android:textSize="27sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dip"
        android:layout_height="45dip"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:layout_marginEnd="38dp"
        android:id="@+id/btn_email"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dip"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/arrow_left"
        android:id="@+id/btn_back"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/txt_pageName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Event Name"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/tb_eventName"
        android:textSize="24sp"
        android:textColor="@color/darkgray"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/headBar"
        android:layout_alignStart="@+id/btn_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="mm/dd/yyyy - mm/dd/yyyy"
        android:id="@+id/tb_dateRange"
        android:textSize="14sp"
        android:layout_below="@+id/tb_eventName"
        android:layout_alignStart="@+id/tb_eventName"
        android:layout_marginTop="4dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:id="@+id/imageButton2"
        android:background="#00000000"
        android:tint="@color/gray"
        android:layout_alignBottom="@+id/tb_dateRange"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_marginTop="45dp"
        android:id="@+id/budgetBar"
        android:layout_below="@+id/tb_dateRange"
        android:layout_toEndOf="@+id/btn_back" />

    <TextView
        android:text="$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/budgetBar"
        android:layout_alignStart="@+id/tb_dateRange"
        android:id="@+id/textView3" />

    <TextView
        android:text="budget used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_dateRange"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="22dp"
        />

    <TextView
        android:text="total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_dateRange"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="24dp"
        />

    <TabHost
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/featureTabs"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/featureTabs"
        android:id="@+id/horizontalRule"
        android:background="@android:color/darker_gray"/>

    <Button
        android:text="Add Feature"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/addFeature"
        android:layout_below="@+id/horizontalRule"
        android:background="@color/headBlue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_alignStart="@+id/btn_back"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"/>

    <!--<ImageButton-->
        <!--android:layout_width="45dp"-->
        <!--android:layout_height="45dp"-->
        <!--app:srcCompat="?android:attr/floatingToolbarOpenDrawable"-->
        <!--android:id="@+id/imageButton"-->
        <!--android:background="#00000000"-->
        <!--android:tint="@color/white"-->
        <!--android:scaleType="fitCenter"-->
        <!--android:layout_alignTop="@+id/btn_email"-->
        <!--android:layout_alignParentEnd="true" />-->


</RelativeLayout>
