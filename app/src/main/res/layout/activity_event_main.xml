<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_event_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexsteen.nrscapp.EventMain">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/headBlue"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/headBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_pageName"
        android:textSize="27sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dip"
        android:layout_height="45dip"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:layout_marginEnd="38dp"
        android:id="@+id/btn_email"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dip"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_previous"
        android:id="@+id/btn_back"
        android:background="#00000000"
        android:layout_alignBottom="@+id/txt_pageName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Event Name"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/tb_eventName"
        android:textSize="24sp"
        android:textColor="@color/darkgray"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/headBar"
        android:layout_alignStart="@+id/btn_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="mm/dd/yyyy - mm/dd/yyyy"
        android:id="@+id/tb_dateRange"
        android:textSize="14sp"
        android:layout_below="@+id/tb_eventName"
        android:layout_alignStart="@+id/tb_eventName"
        android:layout_marginTop="4dp"/>

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="?android:attr/floatingToolbarOpenDrawable"
        android:id="@+id/imageButton"
        android:background="#00000000"
        android:tint="@color/white"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/btn_email"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:id="@+id/imageButton2"
        android:background="#00000000"
        android:tint="@color/gray"
        android:layout_alignBottom="@+id/tb_dateRange"
        android:layout_alignStart="@+id/imageButton" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_dateRange"
        android:layout_toStartOf="@+id/txt_pageName"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="81dp"
        android:id="@+id/progressBar2"
        android:background="@color/gray"/>


</RelativeLayout>
